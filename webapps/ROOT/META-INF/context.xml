<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Context>
<Context useHttpOnly="false">

	<Manager pathname="" />

	<Environment
		name="dataDir"
		value="${catalina.base}/webapps/ROOT/WEB-INF"
		type="java.lang.String"
		override="true" />

	<!-- Manual configuration of datasource if DATABASE_URL environment variable is not present
	<Resource
		name="jdbc/simplicite"
		type="javax.sql.DataSource"
		auth="Container"
		username="${db.username}"
		password="${db.password}"
		driverClassName="${db.driver}"
		maxTotal="${db.maxpoolsize}"
		url="jdbc:${db.url}" />
	-->

</Context>
